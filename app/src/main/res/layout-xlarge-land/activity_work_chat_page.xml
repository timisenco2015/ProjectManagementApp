<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ZihronChatApp.ZihronWorkChat.WorkChatPageActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/chatToolBar"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextColor="@android:color/white"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/projectTaskBackButton"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:tint="@color/color22"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="backToChatActivity"
            android:src="@drawable/backarrowlogo" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/appbarTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:fontFamily="@font/exo_2_bold"
            android:text="Ayobami Idowu"
            android:textColor="@color/color22"
            android:textSize="22sp"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/chatToolBar"
        android:layout_marginTop="20dp"
        android:id="@+id/chatOuterContinerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatContinerId"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter message..."/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/switchChatButtonB"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:tint="@color/color24"
                android:textAlignment="center"
                android:background="@drawable/chatbuttonborder"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
