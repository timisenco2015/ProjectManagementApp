<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="480dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="#FEFCFF"
        android:layout_centerHorizontal="true"
        android:elevation="60dp"
        android:layout_height="150dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:paddingRight="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layoutId"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="85dp"
                android:layout_marginTop="10dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/taskImageId1"
                android:background="@drawable/folder"/>

            <LinearLayout
                android:layout_width="180dp"
               android:layout_toRightOf="@+id/taskImageId1"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:id="@+id/taskTeamTaskLayout1"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#022140"
                    android:fontFamily="@font/lato"
                    android:layout_marginRight="10dp"
                    android:id="@+id/projectNameViewId"
                    android:text="femiProject" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#022140"
                        android:fontFamily="@font/lato"
                        android:layout_marginRight="5dp"
                        android:text="Created By: " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#022140"
                        android:fontFamily="@font/lato"
                        android:id="@+id/projectownerId"
                        android:text="Ayobami" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#c96567"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/taskImageId2"
                android:background="@drawable/projectbutton"/>
        </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/layoutId"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/projectStatusProgressBarId"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_marginRight="20dp"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="320dp"
        android:progress="0" />

    <TextView
        android:id="@+id/projectStatusProgressBarTexyWId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:textColor="#022140"
        android:fontFamily="@font/lato"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0 % done" />
</LinearLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>