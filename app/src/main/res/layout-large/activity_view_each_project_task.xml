<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background1"
    tools:context=".ViewEachProjectTaskActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/projectCommentsToolBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titleTextColor="@android:color/white"
        android:background="#4d5f79">

        <ImageView
            android:id="@+id/projectTaskBackButton"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:tint="@color/color15"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="backToViewEachProject"
            android:src="@drawable/backarrowlogo" />
        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/appbarTextViewId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:fontFamily="@font/exo_2_bold"
            android:text=" Default Task Name"
            android:textColor="@color/color15"
            android:textSize="22sp"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="540dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/projectCommentsToolBar"
        android:background="@drawable/projecttaskborder"
        android:padding="10dp"
        android:scrollbars="none"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Start Date:"
                    android:textColor="#6D7993"
                    android:textSize="22dp" />
                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/projectTaskStartDateTxtVwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="#96858F"
                    android:textSize="19dp"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="End Date:"
                    android:textColor="#6D7993"
                    android:textSize="22dp" />
                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/projectTaskkEndDateTxtvwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="#96858F"
                    android:textSize="19dp"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Name:"
                    android:fontFamily="@font/lato"
                    android:textColor="#6D7993"
                    android:textSize="22dp" />
                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tasknameTxtvwId"
                    android:text="Hardware Installation"
                    android:fontFamily="@font/lato"
                    android:textColor="#96858F"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Project Name:"
                    android:textColor="#6D7993"
                    android:textSize="22dp" />
                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/projectNameTxtvwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="#96858F"
                    android:textSize="19dp"  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Owner:"
                    android:fontFamily="@font/lato"
                    android:textColor="#6D7993"
                    android:textSize="22dp"/>
                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayobami Idowu"
                    android:id="@+id/projectOwnerNameTxtVWId"
                    android:fontFamily="@font/lato"
                    android:textColor="#96858F"
                    android:textSize="19dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Status:"
                    android:textColor="#6D7993"
                    android:textSize="22dp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/projectTaskStatusMainChartId"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6D7993"
                    android:textSize="22dp"
                    android:fontFamily="@font/lato"
                    android:text="Summary:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/projectTaskDescpTxtVWId"
                    android:textColor="#96858F"
                    android:textSize="19dp"
                    android:fontFamily="@font/lato"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="#6D7993"
                    android:fontFamily="@font/lato"
                    android:text="Team Members:"/>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/projectMemeberLayoutId"
                        android:orientation="horizontal">


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="#6D7993"
                    android:fontFamily="@font/lato"
                    android:text="Comments:"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    android:onClick="viewProjectTaskComments"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/addbutton"
                    android:id="@+id/viewProjectTaskCommentsClick"
                    android:layout_height="80dp" />
            </LinearLayout>
        </LinearLayout>



    </ScrollView>







    <ImageButton
        android:id="@+id/editProjectTaskFloatingBtnId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:clickable="true"
        android:onClick="editProjectTask"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@drawable/roundborder"
        android:src="@drawable/editprojecttask"
        android:scaleType="fitXY"
        android:elevation="20dp"/>




    <ImageButton

        android:id="@+id/assignedProjectTaskFloatingBtnId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:clickable="true"
        android:onClick="assignedProjectTask"

        android:background="@drawable/roundborder"
        android:src="@drawable/assigntask"
        android:scaleType="fitXY"
        android:elevation="20dp"/>



    <ImageButton
        android:id="@+id/fabMainFloatingBtnId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:background="@drawable/roundborder"
        android:src="@drawable/addbutton"
        android:scaleType="fitXY"
        android:elevation="30dp"/>


</RelativeLayout>
