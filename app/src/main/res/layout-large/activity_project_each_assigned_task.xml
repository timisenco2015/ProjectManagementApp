<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background1"
    tools:context=".ViewProjectActivity">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="340dp"
        android:layout_centerInParent="true"
        android:background="@drawable/projecttaskborder"
        android:padding="10dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Start Date:"
                    android:textColor="@color/color23"
                    android:textSize="15dp" />
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/startDateTxtvwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="@color/color23"
                    android:textSize="14dp"  />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="End Date:"
                    android:textColor="@color/color23"
                    android:textSize="15dp" />
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/endDateTxtvwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="@color/color23"
                    android:textSize="14dp"  />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Name:"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/color23"
                    android:textSize="15dp" />
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tasknameTxtvwId"
                    android:text="Hardware Installation"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/color23"
                    android:textSize="14dp" />
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Project Name:"
                    android:textColor="@color/color23"
                    android:textSize="15dp" />
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/projectNameTxtvwId"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="00/00/0000"
                    android:textColor="@color/color23"
                    android:textSize="14dp"  />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Owner:"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/color23"
                    android:textSize="15dp"/>
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayobami Idowu"
                    android:id="@+id/projectOwnerNameId"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/color23"
                    android:textSize="14dp" />
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Status:"

                    android:textColor="@color/color23"
                    android:textSize="15dp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />



                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/projectTaskStatusMainChart"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color23"
                    android:textSize="15dp"
                    android:fontFamily="@font/lato"
                    android:text="Summary:"/>
                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:id="@+id/projectTaskDescpvwId"
                    android:textColor="@color/color23"
                    android:textSize="12dp"
                    android:fontFamily="@font/lato"
                    />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/color23"
                    android:fontFamily="@font/lato"
                    android:text="Team Members:"/>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/memeberLayoutId"
                        android:orientation="horizontal">


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/color23"
                    android:fontFamily="@font/lato"
                    android:text="Comments:"/>
                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/addbutton"
                    android:id="@+id/viewProjectTaskCommentsClick"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>



    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:onClick="projectTaskStatusUpdate"
            android:clickable="true"
            android:background="@drawable/projectassignedtaskbuttonborder"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"

                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/color23"
                    android:layout_gravity="fill_vertical"
                    android:background="@drawable/addtask"/>
                <android.support.v4.widget.Space
                    android:layout_width="6dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:layout_gravity="fill_vertical"
                    android:textColor="@color/color2"
                    android:fontFamily="@font/lato"
                    android:textSize="18dp"
                    android:text="Task Status Update"/>
            </LinearLayout>
    </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:clickable="true"
        android:onClick="rateYourselfOnTask"
        android:background="@drawable/projectassignedtaskbuttonborder"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"

                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/color23"
                    android:layout_gravity="fill_vertical"
                    android:background="@drawable/addtask"/>
                <android.support.v4.widget.Space
                    android:layout_width="6dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:layout_gravity="fill_vertical"
                    android:textColor="@color/color2"
                    android:fontFamily="@font/lato"
                    android:textSize="18dp"
                    android:text="Rate Yourself on this Task"/>
            </LinearLayout>

    </LinearLayout>


    </LinearLayout>
</RelativeLayout>
