<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ZihronChatApp.ZihronWorkChat.WorkChatPageActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/chatToolBar"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextColor="@android:color/white"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/projectTaskBackButton"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:tint="@color/color22"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="backToChatActivity"
            android:src="@drawable/backarrowlogo" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/appbarTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:fontFamily="@font/exo_2_bold"
            android:text="Ayobami Idowu"
            android:textColor="@color/color22"
            android:textSize="22sp"
            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color24"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"/>
       <ListView
           android:layout_width="360dp"
           android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="160dp"
        android:background="@color/color2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/closegroupchatmember"
                android:layout_marginLeft="10dp"
                android:layout_height="60dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="700dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/membersChatListLLTId"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
