<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="singuppage"
            android:background="@drawable/signup"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color16"
        android:textSize="30dp"
        android:id="@+id/appId"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:text="ZiHRoN"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/color15"
        android:padding="5dp"
        android:layout_below="@+id/appId"
        android:id="@+id/appIdText"
        android:textSize="15dp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:background="@drawable/loginpagelogotextdesign"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Project Management App"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/loginLayout"
        android:layout_below="@+id/appIdText"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/loginlinearlayoutbackgrnd"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/userNameIImageVW"
                android:background="@drawable/usernamelogo"
                android:layout_height="25dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_marginLeft="10dp"
                android:hint="Username"
                android:textColorHint="@color/color17"
                android:background="@drawable/logintextiewbackgrnd"
                android:layout_toRightOf="@+id/userNameIImageVW"
                android:layout_gravity="center"
                android:layout_height="45dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginlinearlayoutbackgrnd"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/passWdImageVW"
                android:background="@drawable/passwordlogo"
                android:layout_height="25dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_marginLeft="10dp"
                android:hint="Password"
                android:textColorHint="@color/color17"
                android:background="@drawable/logintextiewbackgrnd"
                android:layout_toRightOf="@+id/passWdImageVW"
                android:layout_gravity="center"
                android:layout_height="45dp" />
        </RelativeLayout>



        <Button
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
           android:text="Login"
            android:onClick="loadMainPage"
            android:background="@drawable/loginbuttonbackgrnd"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPasswdTV"
        android:layout_below="@+id/loginLayout"
        android:textColor="@color/color15"
        android:textSize="17dp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/forgotPasswdTV"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/facebook"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color15"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="facebook"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/twitter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color15"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="twitter"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
