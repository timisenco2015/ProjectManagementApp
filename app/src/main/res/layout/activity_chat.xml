<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chatActivity"
    android:padding="15dp"
    android:background="#ffffff"
    android:layout_marginBottom="15dp"
    tools:context=".ChatActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="180dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp"
        android:id="@+id/chatImageId"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chatimage"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/chatImageId"
        android:id="@+id/layout1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Welcome to Zihron Chat"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/lora_bold"
            android:textSize="18sp"
            android:textColor="@color/color12"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="250dp"
            android:text="Chat with your freinds and colleagues. Select an option below"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/downwardChatOptSeletnId"
            android:text="@string/downwardnav"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textStyle="normal"
           android:textColor="#487eb0"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_height="60dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:id="@+id/friendsChatLayoutId"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/chatoptionsborder"
        android:layout_below="@+id/layout1"
        android:translationX="-2000px"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Chat with friends"
            android:textStyle="normal"
            android:fontFamily="@font/pt_sans"
            android:textSize="15sp"
            android:id="@+id/friendsChatTextVWId"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:id="@+id/colleaguesChatLayoutId"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:clickable="true"
        android:translationX="2000px"
        android:layout_below="@+id/friendsChatLayoutId"
        android:background="@drawable/chatoptionsborder"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/colleagueChatTextVWId"
            android:layout_centerInParent="true"
            android:textStyle="normal"
            android:fontFamily="@font/pt_sans"
            android:textSize="15sp"
            android:text="Chat with colleagues"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>

</RelativeLayout>
