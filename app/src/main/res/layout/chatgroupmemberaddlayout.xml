<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color15"
        android:layout_marginTop="20dp"
        android:id="@+id/chatMemberSearchLLTId"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter group member name..."/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/switchChatButtonB"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Add Group Member"
                android:textAlignment="center"
                android:background="@drawable/buttonborder"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color23"

                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:fontFamily="@font/lato"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Select member to add :"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color15"
        android:layout_marginTop="17dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatMemberContainerId"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>



</LinearLayout>