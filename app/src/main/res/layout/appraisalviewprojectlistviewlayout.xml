<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color15"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/color15"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="70dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:background="@drawable/appraisalviewtaskdonelogo"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="65dp">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/projectNameTextVWId"
                android:layout_marginBottom="5dp"
                android:text="test"
                android:textSize="17dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/projectEndDateTextVWId"
                android:layout_below="@+id/projectNameTextVWId"
                android:layout_alignParentLeft="true"
                android:text="2018/07/08"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/projectCreatedByTextVWId"
                android:layout_below="@+id/projectNameTextVWId"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/projectEndDateTextVWId"
                android:text="Ayobami Idowu"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>