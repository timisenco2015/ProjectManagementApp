<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/color18"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="30dp"
        android:layout_height="140dp"
        android:id="@+id/imageId"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/passwordnotreset"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textid1"
        android:layout_below="@+id/imageId"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color39"
        android:fontFamily="@font/oswald_bold"
        android:layout_centerHorizontal="true"
        android:text="Email not found in record"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textid2"
        android:layout_below="@+id/textid1"
        android:textColor="@color/color39"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:fontFamily="@font/oswald_light"
        android:text="We could not find your email in our database "
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textid2"
        android:id="@+id/textid3"
        android:textColor="@color/color39"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oswald_light"
        android:textSize="13sp"
        android:text="Are you sure you have the right email? You need to check your email again"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textid3"
        android:id="@+id/textid4"
        android:textColor="@color/color39"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oswald_light"
        android:textSize="13sp"
        android:text="or may be contact us through"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/textid4"
        android:id="@+id/layoutid1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textid2"
            android:fontFamily="@font/oswald_light"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:textColor="@color/color39"
            android:text="Phone on:"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textid1"
            android:textColor="@color/color39"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/oswald_light"
            android:textSize="13sp"
            android:text="2049623755"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/layoutid1"
        android:id="@+id/layoutid2"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textid1"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/oswald_light"
            android:textSize="13sp"
            android:textColor="@color/color39"
            android:text="Email us:"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textid1"
            android:textColor="@color/color39"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/oswald_light"
            android:textSize="13sp"
            android:text="zihronProjectManagementApp@gmail.com "
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/backPressedId"
        android:layout_below="@+id/layoutid2"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/color31"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"
        android:text="Back"
        android:layout_height="wrap_content" />
</RelativeLayout>