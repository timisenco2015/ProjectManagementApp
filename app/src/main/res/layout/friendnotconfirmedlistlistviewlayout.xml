<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color15"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:id="@+id/friendsProfileImageVWId"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/friendsProfileImageVWId"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userFullNameTxtVWId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Approved"
                android:textColor="@color/color22"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/userEmailTxtVWId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5dp"
                android:text="Not Approved"
                android:textColor="@color/color22"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/confirmfollowTxtVWId"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/border3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/exo_2_bold"
                    android:text="Follow"
                    android:textColor="@color/color22"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/deleteTxtVWId"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border3"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/exo_2_bold"
                    android:text="delete"
                    android:textColor="@color/color22"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>