<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color15"
        android:paddingBottom="50dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/logoLayout"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:background="@color/color29"
            android:layout_height="140dp">
            <ImageView
                android:layout_width="120dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:src="@drawable/projecttaskupdateicon"
                android:layout_height="120dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/color15"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/logoLayout"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Work Done in Percentage"
                    android:textColor="@color/color7"
                    android:textSize="18sp" />
                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:layout_width="250dp"
                    android:orientation="horizontal"
                    android:gravity ="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/projectTaskWorkDonePerId1"
                        android:layout_height="40dp"
                        android:layout_width="170dp"
                        android:gravity ="center"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:backgroundTint="@color/color13"
                        android:orientation="horizontal"
                        android:inputType="text"/>
                    <android.support.v4.widget.Space
                        android:layout_width="2dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:text="."
                        android:textColor="@color/color3"
                        android:textSize="28sp" />

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/projectTaskWorkDonePerId2"
                        android:layout_height="40dp"
                        android:layout_width="170dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="00"
                        android:backgroundTint="@color/color13"
                        android:orientation="horizontal"

                        android:inputType="text"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Descriptions of your work "
                    android:textColor="@color/color7"
                    android:textSize="18sp" />
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/projectTaskWorkDoneDescrpId"
                    android:layout_height="40dp"
                    android:layout_width="320dp"
                    android:gravity ="center"
                    android:layout_gravity="center"

                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/color13"
                    android:orientation="horizontal"

                    android:inputType="text"/>

            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="Update"
                android:clickable="true"
                android:id="@+id/updateProjectTaskStatusId"
                android:textSize="15sp"
                android:textColor="@color/color13"
                android:background="@drawable/edituserbackground"
                android:layout_height="40dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>