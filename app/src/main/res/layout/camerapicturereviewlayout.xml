<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color15"
    android:paddingTop="30dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imagePreviewImageVWId"
        android:scaleType="fitCenter"
        android:layout_height="540dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color11"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelTxtViewId"
                android:textSize="30dp"
                android:textColor="@color/color24"
                android:text="@string/closebutton"/>
            <android.support.v4.widget.Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:id="@+id/acceptTxtViewId"
                android:textColor="@color/color17"
                android:text="@string/acceptbutton"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>