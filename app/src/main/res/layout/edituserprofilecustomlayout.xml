<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:id="@+id/onEditProfilePicsClick"
    android:background="?selectableItemBackground"
    android:layout_marginTop="10dp"
    android:layout_height="45dp">
    <android.support.v4.widget.Space
        android:layout_width="20dp"
        android:layout_height="0dp" />
    <ImageView
        android:layout_width="45dp"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/selectprofilepic"
        android:layout_height="45dp" />
    <android.support.v4.widget.Space
        android:layout_width="20dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/projectTaskNameTxtViw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="Take a new profile photo"
        android:textColor="@color/color25"
        android:textSize="16sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/onEditGallaeryPicsClickId"
        android:background="?selectableItemBackground"
        android:paddingTop="10dp"
        android:layout_height="45dp">
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="0dp" />
        <ImageView
            android:layout_width="30dp"
            android:adjustViewBounds="true"
            android:maxHeight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/selectbackgroundpic"
            android:layout_height="30dp" />
        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/projectTaskNameTxtViwh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/libre_franklin_thin"
            android:text="pick your avater from gallery"
            android:textColor="@color/color25"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/onEditEmailAndNamePicsClick"
        android:background="?selectableItemBackground"
        android:paddingTop="10dp"
        android:layout_height="45dp">
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="0dp" />
        <ImageView
            android:layout_width="30dp"
            android:adjustViewBounds="true"
            android:maxHeight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/editemailandname"
            android:layout_height="25dp" />
        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/projectTaskNameTxtViwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/libre_franklin_thin"
            android:text="Edit your name or email"
            android:textColor="@color/color25"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>