<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color15"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfileInformationActivity">

    <VideoView
        android:layout_width="match_parent"
        android:id="@+id/backgroundVideViewId"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"

        android:background="#edc4dbf6"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="320dp"
        android:scrollbars="none"
        android:elevation="160dp"
        android:background="@drawable/edituserbackground"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_height="540dp">
        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_centerInParent="true"

            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/companyLogo"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/logoimage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/backToUserInformatnPageTxtVWId"
                    android:layout_height="wrap_content"
                    android:textColor="#4d5f79"
                    android:layout_marginTop="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="18dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:fontFamily="@font/roboto_black"
                    android:text="Back"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d5f79"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/roboto_black"
                android:text="Update Your Account"/>


            <LinearLayout
                android:layout_width="280dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/firstNameEditTxtId"
                        android:hint="Given Name"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/middleNameEditTxtId"
                        android:layout_marginTop="15dp"
                        android:hint="Middle Name"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/lastNameEditTxtId"
                        android:hint="Last Name"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content" />

                <AutoCompleteTextView
                    android:id="@+id/genderAutoCompleteTtVWId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="15dp"
                    android:hint="Gender"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#303c6c"
                    android:textColorHint="#6D7993"
                    android:backgroundTint="#e64398"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:id="@+id/homeAddEditTxtId"
                        android:hint="Home Address"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content" />

                <AutoCompleteTextView
                    android:id="@+id/countryAutoCompleteTtVWId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#303c6c"
                    android:textColorHint="#6D7993"
                    android:backgroundTint="#e64398"/>


                <AutoCompleteTextView
                    android:id="@+id/provinceStateAutoCompleteTxtVWId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#303c6c"
                    android:textColorHint="#6D7993"
                    android:backgroundTint="#e64398"/>

                <AutoCompleteTextView
                    android:id="@+id/cityAutoCompleteTxtVWId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#303c6c"
                    android:textColorHint="#6D7993"
                    android:backgroundTint="#e64398"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/postalZipCodeEditTxtId"
                        android:hint="Zip/Postal Code"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                        <EditText
                            android:layout_width="60dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/phoneNoCountryCodeEditTxtId"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat"
                            android:textColor="#303c6c"
                            android:textColorHint="#6D7993"
                            android:backgroundTint="#e64398"
                            android:layout_height="wrap_content" />

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="30dp"

                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#303c6c"
                        android:textColorHint="#6D7993"
                        android:backgroundTint="#e64398"
                        android:layout_height="wrap_content"
                        android:text="-"/>

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="0dp" />

                        <EditText
                            android:layout_width="210dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/phoneNoEditTxtId"
                            android:hint="Phone number"
                            android:inputType="number"
                            android:fontFamily="@font/montserrat"
                            android:textColor="#303c6c"
                            android:textColorHint="#6D7993"
                            android:backgroundTint="#e64398"
                            android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="Update"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color15"
                android:id="@+id/login_with_amazon"
                android:onClick="UpdateUser"
                android:background="@drawable/loginbuttonbackgrnd"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</RelativeLayout>