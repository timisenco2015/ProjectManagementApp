<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".DelegateProjectActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/projectTaskToolBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:titleTextColor="@android:color/white"
        android:background="@color/color15">
        <TextView

            android:layout_width="60dp"
            android:layout_height="80dp"
            android:tint="@color/color22"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/exo_2_bold"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="@string/windowcloselogo"
            android:id="@+id/closeDedigateActivity" />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/color15"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/projectNameTV"
            android:fontFamily="@font/libre_franklin_thin"
            android:textColor="@color/color11"
            android:text="Project Name:"
            />
<android.support.v4.widget.Space
    android:layout_width="10dp"
    android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/projectNameTV"
            android:id="@+id/projectNameTVWId"
            android:textStyle="bold"
            android:fontFamily="@font/libre_franklin_thin"
            android:textColor="@color/color11"
            android:text="Technical Service"
            />
<android.support.v4.widget.Space
    android:layout_width="20dp"
    android:layout_height="0dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/color15"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_height="55dp">
            <CheckBox android:id="@+id/checkboxQuest1Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/delegateQuestions1Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Do you this user to be able to further delegate this project to another user?"
                android:textColor="@color/color22"
                android:textSize="13sp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <CheckBox android:id="@+id/checkboxQuest2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/delegateQuestions2Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Do you want  this user to be able to assign task you created to team member?"
                android:textColor="@color/color22"
                android:textSize="13sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/color15"
            android:layout_height="55dp">
            <CheckBox android:id="@+id/checkboxQuest3Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/delegateQuestions3Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Do you this user to be able to rate each member performance on each task you created?"
                android:textColor="@color/color22"
                android:textSize="13sp"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/color15"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memberDetailLLT"
            android:background="@color/color15"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/projectNameLLT"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                   android:gravity="center_horizontal"
                    android:src="@drawable/profilelogo"
                    android:background="@drawable/roundborder"/>
                <android.support.v4.widget.Space
                    android:layout_height="10dp"
                    android:layout_width="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/memberNameTextViewId"
                android:fontFamily="@font/libre_franklin_thin"
                android:textColor="@color/color11"
                android:text="Ayobami Idowu" />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/memberEmailTextViewId"
                android:fontFamily="@font/libre_franklin_thin"
                android:textColor="@color/color11"
                android:text="default@gmsail.com" />


            </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:id="@+id/viewId1"
            android:layout_below="@+id/memberDetailLLT"
            android:layout_centerHorizontal="true"
            android:background="@color/color7"/>
        <Button

            android:layout_height="45dp"
            android:layout_below="@+id/viewId1"
            android:layout_width="170dp"
            android:id="@+id/projectDelegateBtn"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/textColor"
            android:text="Delegate  PROJECT"
            android:background="@drawable/buttonrippleeffect"/>



    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
