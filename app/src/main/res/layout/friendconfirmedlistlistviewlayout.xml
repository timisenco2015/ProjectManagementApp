<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color15"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:id="@+id/friendsProfileImageVWId"
            android:layout_height="90dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/detailsLLTId"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/friendsProfileImageVWId"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userFullNameTxtVWId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:layout_marginLeft="5dp"
                android:text="Approved"
                android:textColor="@color/color22"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/userEmailTxtVWId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/userFullNameTxtVWId"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5dp"
                android:text="Not Approved"
                android:textColor="@color/color22"
                android:textSize="12sp"
                />
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/detailsLLTId"
                android:layout_toRightOf="@+id/friendsProfileImageVWId"
                android:paddingTop="13dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <Button

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/closeTextViewId"
                    android:layout_marginRight="15dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:text="@string/closebutton"
                    android:textColor="@color/color22"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/confirmfollowTxtVWId"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border3"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/exo_2_bold"
                    android:text="followed"
                    android:textColor="@color/color22"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </RelativeLayout>



</LinearLayout>