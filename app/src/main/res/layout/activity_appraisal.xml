<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF0E6"

    android:orientation="vertical"
    tools:context=".AppraisalActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/layout1Id"

    android:background="#FAF0E6"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="250dp"
           android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@color/color31"
            android:layout_centerHorizontal="true"
            android:id="@+id/weeklyAppriasalReportId"

            android:layout_gravity="center_horizontal"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:elevation="200dp"
                android:src="@drawable/apprais"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="250dp"
                android:fontFamily="@font/roboto"
                android:text="Personal Appraisal"
                android:textStyle="bold"
                android:textColor="#FF1493"
                android:textSize="19sp"
                />
        </RelativeLayout>
<android.support.v4.widget.Space
    android:layout_width="200dp"
    android:background="#FAF0E6"
    android:id="@+id/whiteSpaceId"
    android:layout_below="@+id/weeklyAppriasalReportId"
    android:layout_height="40dp" />
        <RelativeLayout
            android:layout_width="250dp"
            android:id="@+id/supervisorAppriasalReportId"
            android:layout_below="@+id/whiteSpaceId"
            android:layout_centerHorizontal="true"


            android:background="#FAF0E6"
            android:layout_gravity="center_horizontal"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:elevation="200dp"

                android:src="@drawable/supervisorapprisailimage"

                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_black"
                android:textStyle="bold"
                android:text="Supervisor Appraisal"
                android:textColor="#FF1493"
                android:textSize="19sp"
                />
        </RelativeLayout>


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout2Id"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/switchButtonId"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:tint="#008B8B"
            android:clickable="true"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrowlogo" />
        <RelativeLayout
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_below="@+id/switchButtonId"
            android:id="@+id/selectBySupervisorLLTId"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dashroundborder"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="250dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_black"
                android:textStyle="bold"
                android:text="Supervisors"
                android:textColor="#FF1493"
                android:textSize="19sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:id="@+id/selectByProjectLLTId"
            android:clickable="true"
            android:layout_below="@+id/switchButtonId"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dashroundborder"
            android:layout_toRightOf="@+id/selectBySupervisorLLTId"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="250dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_black"
                android:textStyle="bold"
                android:text="Projects"
                android:textColor="#FF1493"
                android:textSize="19sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:background="@drawable/dashroundborder"
            android:id="@+id/selectByGeneralLLTId"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/selectByProjectLLTId"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="250dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_black"
                android:textStyle="bold"
                android:text="General"
                android:textColor="#FF1493"
                android:textSize="19sp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
