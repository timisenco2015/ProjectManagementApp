<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color15"
    android:orientation="vertical">
    <TextView
        android:id="@+id/verificateCodeReviewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="Verification Code:"
        android:textColor="@color/color11"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
android:layout_below="@+id/verificateCodeReviewId"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/verification1EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/libre_franklin_thin"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/color18"
            android:background="@drawable/verificationbuttonborder"
            android:orientation="horizontal"

            android:inputType="number"/>
        <EditText
            android:id="@+id/verification2EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/libre_franklin_thin"
            android:layout_marginRight="10dp"
            android:background="@drawable/verificationbuttonborder"
            android:backgroundTint="@color/color18"
            android:orientation="horizontal"
            android:inputType="number"/>
        <EditText
            android:id="@+id/verification3EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/libre_franklin_thin"
            android:background="@drawable/verificationbuttonborder"
            android:backgroundTint="@color/color18"
            android:orientation="horizontal"

            android:inputType="number"/>
        <EditText
            android:id="@+id/verification4EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/libre_franklin_thin"
            android:backgroundTint="@color/color18"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/verificationbuttonborder"
            android:inputType="number"/>
        <EditText
            android:id="@+id/verification5EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/libre_franklin_thin"
            android:backgroundTint="@color/color18"
            android:orientation="horizontal"
            android:background="@drawable/verificationbuttonborder"
            android:inputType="number"/>
        <EditText
            android:id="@+id/verification6EditTxtId"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:background="@drawable/verificationbuttonborder"
            android:fontFamily="@font/libre_franklin_thin"
            android:backgroundTint="@color/color18"
            android:orientation="horizontal"
            android:inputType="number"/>
    </LinearLayout>
</HorizontalScrollView>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="80dp"
                android:text="Okay"
                android:id="@+id/okayButtonId"
                android:fontFamily="@font/libre_franklin_thin"
                android:background="@color/color15"
                android:outlineProvider="none"

                android:textColor="@color/color16"
                android:layout_height="40dp" />
            <Button
                android:layout_width="80dp"
                android:id="@+id/cancelButtonId"
                android:text="Cancel"
                android:fontFamily="@font/libre_franklin_thin"
                android:background="@color/color15"
                android:textColor="@color/color13"
                android:outlineProvider="none"

                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>