<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height="match_parent"
    android:background="#355C7D"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/topLayoutId"
        android:background="@color/color15"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_height="150dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/topLayoutId"
        android:orientation="vertical"
        android:background="@drawable/background8"
        android:layout_centerInParent="true"
        android:layout_height="360dp">
<ImageView
    android:layout_width="match_parent"
    android:background="#9E4d5f79"
    android:layout_height="match_parent" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#f4f4f2"
        android:elevation="15dp"
        android:layout_height="550dp">

        <ImageView
            android:layout_width="60dp"
            android:id="@+id/companyLogo"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logoimage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4d5f79"
        android:textSize="28dp"
        android:id="@+id/appId"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/companyLogo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="ZiHRoN"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/appId"
    android:background="#f4f4f2"
    android:layout_marginTop="25dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f2"
        android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/loginLayout"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4d5f79"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_black"
            android:layout_below="@+id/companyLogo"
            android:text="Sign in"/>
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/userNameIImageVW"
                android:src="@drawable/usernamelogo"
                android:tint="#6C5B7B"
                android:layout_height="25dp" />
            <EditText
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:hint="Username"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:id="@+id/usernameEditextId"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="#BE9A94"
                android:layout_toRightOf="@+id/userNameIImageVW"
                android:textSize="15dp"
                android:textColor="@color/color16"
                android:layout_gravity="center"
                android:layout_height="45dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/passWdImageVW"
                android:tint="#6C5B7B"
                android:src="@drawable/passwordlogo"
                android:layout_height="25dp" />
            <EditText
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:id="@+id/passwordEditextId"
                android:textColorHint="#BE9A94"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15dp"
                android:singleLine="true"
                android:textColor="@color/color16"
                android:layout_toRightOf="@+id/passWdImageVW"
                android:layout_gravity="center"
                android:layout_height="45dp" />
        </RelativeLayout>



        <Button
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
           android:text="Login"
            android:id="@+id/login_button"
            android:onClick="loadMainPage"
            android:background="@drawable/loginbuttonbackgrnd"
            android:layout_height="50dp" />


    </LinearLayout>
        

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/loginLayout"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:id="@+id/forgotPasswdTV"
        android:layout_marginRight="10dp"
        android:textColor="#748484"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:text="Forgot login details?"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotPasswdTV"
            android:id="@+id/userSignUpTV"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#748484"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:clickable="true"
            android:text="Not yet registered?"/>
</RelativeLayout>
    </RelativeLayout>
</ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color15"
        android:layout_alignParentBottom="true"
        android:layout_height="150dp"/>
</RelativeLayout>
