<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color15"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutId1"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#D83F87"
            android:layout_height="150dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="50dp"

                android:textAlignment="center"
                android:fontFamily="@font/lora_bold"
                android:text="Verification"
                android:textColor="@color/color15"
                android:textSize="25sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="100dp"
            android:background="@drawable/verifycodeicon"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:elevation="80dp"
            android:layout_marginTop="100dp"
            android:layout_height="80dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layoutId1"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/verificateCodeReviewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/pt_sans"
            android:text="We have sent you verification code via your email address"
            android:textColor="@color/color6"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_below="@+id/verificateCodeReviewId"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/pt_sans"
                android:text="enter code here "
                android:textColor="@color/color29"
                android:textSize="19sp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/verification1EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/color7"
                        android:background="@drawable/verificationbuttonborder"
                        android:orientation="horizontal"
                        android:maxLength="1"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/verification2EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/verificationbuttonborder"
                        android:orientation="horizontal"
                        android:textColor="@color/color7"
                        android:maxLength="1"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/verification3EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:background="@drawable/verificationbuttonborder"
                        android:textColor="@color/color7"
                        android:maxLength="1"
                        android:orientation="horizontal"

                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/verification4EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:textColor="@color/color7"
                        android:orientation="horizontal"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:background="@drawable/verificationbuttonborder"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/verification5EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:textColor="@color/color7"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:orientation="horizontal"
                        android:background="@drawable/verificationbuttonborder"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/verification6EditTxtId"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:textColor="@color/color7"
                        android:background="@drawable/verificationbuttonborder"
                        android:fontFamily="@font/libre_franklin_thin"
                        android:orientation="horizontal"
                        android:inputType="number"/>
                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#D83F87"
                        android:layout_height="match_parent">
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/okayButtonId"
                            android:fontFamily="@font/libre_franklin_thin"
                            android:background="@drawable/forwardlogo"
                            android:backgroundTint="@color/color15"
                            android:outlineProvider="none"
                            android:onClick="verifiedUser"
                            android:textColor="@color/color16"/>
                    </RelativeLayout>

                </com.github.florent37.shapeofview.shapes.CircleView>

                <Button
                    android:layout_width="100dp"
                    android:id="@+id/cancelButtonId"
                    android:textSize="15sp"
                    android:text="Resend"
                    android:layout_marginTop="20dp"
                    android:onClick="resendCode"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:background="@color/color15"
                    android:textColor="@color/color13"
                    android:outlineProvider="none"

                    android:layout_height="40dp" />


                <Button
                    android:layout_width="100dp"
                    android:textSize="12sp"
                    android:text="back"
                    android:layout_marginTop="20dp"
                    android:onClick="backToLogin"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:background="@color/color15"
                    android:textColor="@color/color13"
                    android:outlineProvider="none"

                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>