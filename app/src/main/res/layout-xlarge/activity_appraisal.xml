<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color15"

    android:orientation="vertical"
    tools:context=".AppraisalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"

            android:clickable="true"

            android:layout_centerHorizontal="true"
            android:id="@+id/weeklyAppriasalReportId"
            android:background="@drawable/appraisalselectionbuttonpressed"
            android:layout_gravity="center_horizontal"
            android:layout_height="180dp">
            <TextView
                android:id="@+id/taskOwnerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/exo_2_bold"
                android:text="Personal Rating"
                android:textColor="@color/color7"
                android:textSize="17sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:id="@+id/monthlyAppriasalReportId"
            android:layout_below="@+id/weeklyAppriasalReportId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/appraisalselectionbuttonpressed"
            android:layout_gravity="center_horizontal"
            android:layout_height="180dp">
            <TextView
                android:id="@+id/taskOwnerTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/exo_2_bold"
                android:text="Supervisor Appraisal"
                android:textColor="@color/color7"
                android:textSize="17sp"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
